<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
	android:background="@color/light_grey">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:measureWithLargestChild="true"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/tab_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_blog"
            style="@style/TabBarButtons"/>

        <Button
            android:id="@+id/tab_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_schedule"
            style="@style/TabBarButtons"/>

        <Button
            android:id="@+id/tab_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_videos"
            style="@style/TabBarButtons"/>

        <Button
            android:id="@+id/tab_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_twitter"
            style="@style/TabBarButtons"/>
    </LinearLayout>

</LinearLayout>